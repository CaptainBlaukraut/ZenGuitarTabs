<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:background="#FFFAF0"
    tools:context="com.maximilianobpacher.zenguitartabs.ChordsOverviewActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Topline"
            android:background="@drawable/menubar"
            android:text="Level 1: Basic Chords"
            android:textColor="#1c0a0c"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_weight="10"/>

    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chordPicture"
            android:drawable="@drawable/echord"
            android:layout_weight = "40" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="30dip"
        android:layout_marginLeft="30dip"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Chord Name"
                android:id="@+id/chordName"
                android:textSize="26sp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_weight="1"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/prevButton"
                    android:onClick="showPrevious"
                    android:visibility="invisible"
                    android:text = "prev"
                    android:background="@drawable/gameoverbutton"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nextButton"
                    android:onClick="showNext"
                    android:background="@drawable/gameoverbutton"
                    android:text="next"
                    android:layout_weight="1"/>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
