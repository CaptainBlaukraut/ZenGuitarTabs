<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFAF0"
    android:screenOrientation="portrait"
    tools:context="com.maximilianobpacher.zenguitartabs.LevelSelectActivity">

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Topline"
        android:background="@drawable/menubar"
        android:text="Select your Level"
        android:textColor="#1c0a0c"
        android:textSize="30sp"
        android:gravity="center"
        />
</LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="90">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/level1"
                android:onClick="showChords"
                android:layout_weight="1"
                android:background="@drawable/levelpattern">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/level1icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop = "25dp"
                        android:id="@+id/level1icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level 1: \nBasic Chords \n\nChords:\nA,B,C,D,E,F,G"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dip"
                        android:id="@+id/level1description"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:onClick="playLevel"
                        android:background="@drawable/playbutton"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/playlevel1" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/level2"
                android:onClick="showChords"
                android:layout_weight="1"
                android:background="@drawable/levelpattern">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/level2icon"
                        android:layout_centerHorizontal="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level 2: \nMinor Chords\n\nChords:\nAm,Bm,Cm,Dm,Em,Fm,Gm "
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dip"
                        android:id="@+id/level3description"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="@drawable/playbutton"
                        android:onClick="playLevel"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/playlevel2" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/level3"
                android:onClick="showChords"
                android:layout_weight="1"
                android:background="@drawable/levelpattern"
>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/level3icon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level 3: \n7 Chords\n\nChords:\nA7,B7,C7,D7,\nE7,F7,G7"
                        android:textSize="14sp"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="20dip"
                        android:id="@+id/level2description"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:onClick="playLevel"
                        android:background="@drawable/playbutton"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/playlevel3" />

                </RelativeLayout>

                </LinearLayout>


        </LinearLayout>

    </LinearLayout>
